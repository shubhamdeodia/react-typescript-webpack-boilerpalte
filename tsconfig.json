{
    "compilerOptions": {
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "module": "ESNext",
        "allowJs": true,
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "target": "ES2020"
    },
    "include": [
        "jest.config.js",
        "src/**/*",
        "./.eslintrc.js",
        "./config/webpack.common.js",
        "./config/webpack.dev.js",
        "./config/webpack.prod.js",
        "./babel.config.js"
    ]
}
